<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SignUpActivity"
    >

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        android:id="@+id/sign_up_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_text"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="123dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="125dp"/>

    <EditText
        style="@style/LoginSignUpEditText"
        android:hint="@string/sign_up_email_hint"
        android:id="@+id/sign_up_email_edittext"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_textview"/>

      <EditText
          style="@style/LoginSignUpEditText"
          android:hint="@string/sign_up_password_hint"
          android:id="@+id/sign_up_password_edittext"
          android:inputType="textPassword"
          android:layout_marginTop="@dimen/activity_sign_up_password_edit_text_margin_top"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/sign_up_email_edittext"/>

    <Button
        style="@style/LoginSignUpButton"
        android:id="@+id/sign_up_button"
        android:layout_marginTop="16dp"
        android:onClick="signUpOnClick"
        android:text="@string/sign_up_button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_password_edittext"/>


  </android.support.constraint.ConstraintLayout>

</ScrollView>