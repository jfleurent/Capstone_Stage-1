<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FavoriteCategoryListFragment"
>

  <RelativeLayout
      android:id="@+id/toolbar_relativelayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
  >

    <android.support.v7.widget.Toolbar
        android:id="@+id/favorite_category_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/favorite_category_toolbar_title"
        app:titleTextColor="@color/toolbar_title_color"
    >
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="@dimen/fragment_favorite_category_list_button_width"
        android:layout_height="@dimen/fragment_favorite_category_list_button_height"
        android:background="@drawable/ic_delete"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fragment_favorite_category_list_button_margin"
        android:visibility="invisible"
    />
  </RelativeLayout>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/category_list_recyclerview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar_relativelayout"
      android:layout_marginBottom="@dimen/fragment_favorite_category_list_margin_bottom"
  />

</android.support.constraint.ConstraintLayout>