<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

  <TextView
      android:id="@+id/dialog_title_textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="@dimen/restaurant_category_dialog_title_text_padding"
      android:text="@string/restaurant_category_dialog_title"
      android:textSize="@dimen/customize_page_dialog_cancel_button_text_size"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
  />

  <EditText
      android:id="@+id/category_title_edittext"
      android:layout_width="@dimen/restaurant_category_dialog_edit_text_width"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/restaurant_category_dialog_edit_text_margin_top"
      android:hint="@string/title_edit_text_hint"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/dialog_title_textview"
  />

  <Button
      android:id="@+id/cancel_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/restaurant_category_dialog_cancel_button_margin_top"
      android:text="@string/restaurant_category_dialog_cancel_button_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/category_title_edittext"
      style="@style/Base.Widget.AppCompat.Button.Borderless"
  />

  <Button
      android:id="@+id/ok_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/restaurant_category_dialog_ok_button_margin_end"
      android:layout_marginTop="@dimen/restaurant_category_dialog_ok_button_margin_top"
      android:text="@string/restaurant_category_dialog_ok_button_text"
      app:layout_constraintEnd_toStartOf="@+id/cancel_button"
      app:layout_constraintTop_toBottomOf="@+id/category_title_edittext"
      style="@style/Base.Widget.AppCompat.Button.Borderless"
  />

</android.support.constraint.ConstraintLayout>